# .env

# MongoDB Credentials
MONGO_USER=robert_redford
MONGO_PASSWORD=my_super_secret_password
MONGO_DB_NAME=moviefy

# Full Connection String for the Backend
MONGO_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@mongodb:27017/${MONGO_DB_NAME}?authSource=admin

# CORRECTED: Backend Port
BACKEND_PORT=8000

# JWT Secret for the backend
JWT_SECRET=your_super_secret_jwt_key_for_moviefy

# CORRECTED: Frontend API URL to match the backend port
VITE_API_URL=http://localhost:8000/api


# === Email Settings (for MailHog) ===
# We point the app to the MailHog container
SMTP_HOST=mailhog
SMTP_PORT=1025
# MailHog doesn't require authentication
SMTP_USER=
SMTP_PASS=
# The email address the app will send from
MAIL_FROM=noreply@moviefy.com